<sap:ActivityDesigner x:Class="MyOwnActivityDesigner.OneStep"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sap="clr-namespace:System.Activities.Presentation;assembly=System.Activities.Presentation"
    xmlns:sapv="clr-namespace:System.Activities.Presentation.View;assembly=System.Activities.Presentation">
    <Grid>
        <sapv:ExpressionTextBox x:Name="NameActivity" OwnerActivity="{Binding Path=ModelItem}" Expression="{Binding Path=ModelItem.Name, Mode=TwoWay}"></sapv:ExpressionTextBox>
    </Grid>
</sap:ActivityDesigner>
